<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bitmap_bg_menu"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/leftLinearLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="10" >
        </LinearLayout>

        <ImageButton
            android:id="@+id/startGameButton"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_gravity="right"
            android:background="@android:color/transparent"
            android:scaleType="fitEnd"
            android:src="@drawable/mj_ui_menu_button01_t" android:layout_weight="10" android:layout_marginTop="2dp" android:layout_marginBottom="2dp"/>

        <ImageButton
            android:id="@+id/shopButton"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_gravity="right"
            android:background="@android:color/transparent"
            android:scaleType="fitEnd"
            android:src="@drawable/mj_ui_menu_button02_t" android:layout_weight="10" android:layout_marginTop="2dp" android:layout_marginBottom="2dp"/>

        <ImageButton
            android:id="@+id/recordButton"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_gravity="right"
            android:background="@android:color/transparent"
            android:scaleType="fitEnd"
            android:src="@drawable/mj_ui_menu_button03_t" android:layout_weight="10" android:layout_marginTop="2dp" android:layout_marginBottom="2dp"/>

        <ImageButton
            android:id="@+id/tutorialButton"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_gravity="right"
            android:background="@android:color/transparent"
            android:scaleType="fitEnd"
            android:src="@drawable/mj_ui_menu_button04_t" android:layout_weight="10" android:layout_marginTop="2dp" android:layout_marginBottom="2dp"/>

        <ImageButton
            android:id="@+id/optionButton"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_gravity="right"
            android:background="@android:color/transparent"
            android:scaleType="fitEnd"
            android:src="@drawable/mj_ui_menu_button05_t" android:layout_weight="10" android:layout_marginTop="2dp" android:layout_marginBottom="2dp"/>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="10" >
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rightLinearLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="10"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/linearLayout6"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:orientation="vertical" android:layout_weight="5">
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="10"
                android:scaleType="fitEnd"
                android:src="@drawable/mj_ui_menu_title_t" />

            <LinearLayout
                android:id="@+id/linearLayout7"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:orientation="vertical" android:layout_weight="5">
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:orientation="vertical" android:layout_weight="50">

            <FrameLayout
                android:id="@+id/frameLayout1"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="60">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/mj_ui_menu_show01_a"/>

                <LinearLayout
                    android:id="@+id/linearLayout10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="wrap_content"
                        android:layout_height="0dip"
                        android:layout_weight="11"
                        android:src="@drawable/mj_ui_menu_vip_a" android:paddingTop="8dp" android:paddingBottom="4dp"/>

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="0dip"
                        android:layout_weight="10"
                        android:gravity="center"
                        android:text="新手" android:textSize="16dp" android:textColor="#FFFFFF"/>

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="0dip"
                        android:layout_weight="10"
                        android:gravity="center"
                        android:text="＄2500" android:textColor="#FFFFFF" android:textSize="16dp"/>

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="0dip"
                        android:layout_weight="10"
                        android:gravity="center"
                        android:text="1200分" android:textSize="16dp" android:textColor="#FFFFFF"/>

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="0dip"
                        android:layout_weight="10"
                        android:gravity="center"
                        android:text="請登入OpenFeint" android:textSize="16dp" android:textColor="#FFFFFF"/>
                </LinearLayout>

            </FrameLayout>

            <LinearLayout
                android:id="@+id/linearLayout9"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:orientation="vertical" android:layout_weight="5">
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:src="@drawable/mj_ui_menu_show02_a" android:layout_weight="20"/>

            <LinearLayout
                android:id="@+id/linearLayout8"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:orientation="vertical" android:layout_weight="15">
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:orientation="vertical" android:layout_weight="10">
        </LinearLayout>

    </LinearLayout>

</LinearLayout>